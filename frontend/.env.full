# Full deployment configuration (Digital Ocean)
# This environment is used for the full-featured deployment with backend API

# Deployment mode: "full" or "lite"
NEXT_PUBLIC_DEPLOYMENT_MODE=full

# Feature flags
NEXT_PUBLIC_ENABLE_API=true
NEXT_PUBLIC_ENABLE_VOTING=true
NEXT_PUBLIC_ENABLE_CROSS_SESSION_TRACKING=true
NEXT_PUBLIC_ENABLE_LIVE_STATISTICS=true
NEXT_PUBLIC_ENABLE_IMAGE_GENERATION=true

# API Configuration
NEXT_PUBLIC_API_BASE_URL=/api/v1

# CDN/Storage Configuration
NEXT_PUBLIC_SPACES_CDN_URL=https://cgc-lb-and-cdn-content.nyc3.cdn.digitaloceanspaces.com
