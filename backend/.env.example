# Image Generation API Keys
FREEPIK_API_KEY=xxx
GOOGLE_API_KEY=xxx
LEONARDO_API_KEY=xxx

# Storage Configuration
# Set to "true" to use DigitalOcean Spaces, "false" for local disk storage
USE_DO_SPACES=false

# DigitalOcean Spaces Configuration (required when USE_DO_SPACES=true)
DO_SPACES_BUCKET=cgc-lb-and-cdn-content
DO_SPACES_ENDPOINT=nyc3.digitaloceanspaces.com
DO_SPACES_KEY=your_spaces_access_key
DO_SPACES_SECRET=your_spaces_secret_key

# Valkey Database Configuration (for user vote caching)
DO_VALKEY_HOST=your_valkey_cluster_host
DO_VALKEY_PORT=25061
DO_VALKEY_URI=rediss://your_valkey_cluster_uri

# Server Configuration
PORT=8080
HOST=0.0.0.0
IMAGES_DIR=images

# Gin Configuration
GIN_MODE=release